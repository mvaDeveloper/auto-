<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MenuFragment"
    android:background="@color/back">


    <TextView
        android:id="@+id/textView"
        style="@style/header"
        android:layout_marginTop="50dp"
        android:text="@string/text_app"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_helper"
        style="@style/button_menu"
        android:background="@drawable/button_main"
        android:text="@string/text_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_data"
        style="@style/button_menu"
        android:text="@string/text_data"
        android:background="@drawable/button_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_helper" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_112"
        style="@style/button_menu"
        android:text="@string/text_emergency"
        android:background="@drawable/button_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dictionary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_call_112"
        style="@style/button_menu"
        android:text="@string/text_112"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_112" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dictionary"
        style="@style/button_menu"
        android:text="@string/text_dictionary"
        android:background="@drawable/button_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_data" />


</androidx.constraintlayout.widget.ConstraintLayout>